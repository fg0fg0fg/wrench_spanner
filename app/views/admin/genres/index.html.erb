<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-6 pb-3 bg-body">
      <h4 class="mt-3">ジャンル一覧/追加</h4>
      <%= render 'layouts/errors', model: @genre %>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="md-3">
          <%= f.label :name, "ジャンル名", class: "foem-label" %>
          <%= f.text_field :name, class: "form-control" %>
          <div class="d-flex justify-content-end">
            <%= f.submit "登録", class: "btn btn-block btn-outline-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-4 mx-auto bg-body">
      <table class="table">
        <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td class="align-middle">
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-outline-success float-end" %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>