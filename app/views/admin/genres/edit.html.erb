<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-6">
      <h4 class="mt-2">ジャンル編集</h4>
      <%= render 'layouts/errors', model: @genre %>
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <div class="md-3">
          <%= f.label :name, "ジャンル名", class: "foem-label" %>
          <%= f.text_field :name, class: "form-control" %>
          <div class="d-flex justify-content-end">
            <%= f.submit "更新", class: "btn btn-block btn-outline-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>