<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-2 d-flex align-items-center">
      <%= image_tag @user.get_profile_image, size: "150x150", class: "d-block mx-auto ", style: "border-radius: 50%;" %>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header"><%= @user.name %>さん</div>
        <div class="card-body bg-body-tertiary">
          <div class="card-text"><%= @user.introduction %></div>
          <div class="card-text"><small class="text-body-secondary">レビュー数:</small></div>
          <div class="text-end">
            <%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-outline-success btn-block" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col-md-6">
      <table class="table">
        <% @posts.each do |post| %>
          <tbody>
            <tr>
              <td style="width: 20%;">
                <%= image_tag post.get_post_image, size: "50x50", class: "d-block mx-auto" %>
              </td>
              <td style="width: 20%;">
                <%= link_to post.title, admin_post_path(post), class: "link-secondary link-underline-opacity-0 link-underline-opacity-75-hover" %>
              </td>
              <td style="width: 20%;">評価</td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>