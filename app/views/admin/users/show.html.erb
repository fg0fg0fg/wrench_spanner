<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-2">
      <%= image_tag @user.get_profile_image, size: "100x100", class: "d-block mx-auto", style: "border-radius: 50%;" %>
      <div class="mt-2">
        <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-outline-success btn-block" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mt-3"><%= @user.name %></div>
      <div class="mt-3">プロフィール</div>
      <div class=""><%= @user.introduction %></div>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col-md-6">
      <table class="table">
        <% @posts.each do |post| %>
          <tbody>
            <tr>
              <td style="width: 20%;">
                <%= image_tag post.get_post_image, size: "50x50", class: "d-block mx-auto" %>
              </td>
              <td style="width: 20%;">
                <%= link_to post.title, admin_post_path(post), class: "text-dark" %>
              </td>
              <td style="width: 20%;">評価</td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>