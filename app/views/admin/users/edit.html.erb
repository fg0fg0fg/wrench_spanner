<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-5">
      <h4 class="mt-5">ユーザー情報編集</h4>
      <%= render 'layouts/errors', model: @user %>
      <%= form_with model: @user, url: admin_user_path(@user) do |f| %>
        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image, "プロフィール画像" %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, rows: 3, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "保存", class: "btn btn-block btn-success" %>
        </div>
        <div class="form-group d-flex justify-content-end">
          <%= link_to "退会する", admin_user_path(@user), method: :delete, data: {confirm: "本当に退会しますか？"}, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>