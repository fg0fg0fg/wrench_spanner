<div class="container">
  <div class="row mx-auto mt-3">
    <div class="col-md-3">
      <%= render 'admin/genres/search', genres: @genres %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h4 class="mt-2">レビュー一覧</h4>
      <% if params[:genre_id] %>
        <%= @genre.name %> : <%= @posts.count %>件
      <% else %>
        <%= @posts.count %>件
      <% end %>
      <%= render 'index', posts: @posts, post: @post %>
    </div>
  </div>
</div>