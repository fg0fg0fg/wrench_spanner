<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-6">
      <table class="table">
        <% @posts.each do |post| %>
          <tbody>
            <tr>
              <td style="width: 20%;">
                <%= image_tag post.get_post_image, size: "50x50", class: "d-block mx-auto" %>
              </td>
              <td style="width: 20%;">
                <%= link_to post.title, admin_post_path(post), class: "link-secondary link-underline-opacity-0 link-underline-opacity-75-hover" %>
              </td>
              <td style="width: 20%;">評価</td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>