
<div class="container">
  <div class="row mx-auto mt-3">
    <div class="col-md-3">
      <%= render 'admin/genres/search', genres: @genres %>
    </div>
    <div class="col-md-9">
      <div class="row mt-3">
        <div class="col-md-2">
          <%= image_tag @user.get_profile_image, size: "50x50", class: "d-block ms-auto rounded-circle" %>
        </div>
        <div class="col-md-6">
          <div class="mt-2 text-start">
            <%= link_to admin_user_path(@user), class: "link-secondary link-underline-opacity-0 link-underline-opacity-75-hover" do %>
              <%= @user.name %>さん
            <% end %>
          </div>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <div class="col-md-3">
          <%= image_tag @post.get_post_image, size: "150x150", class: "d-block mx-auto" %>
        </div>
        <div class="col-md-8 border border-black rounded bg-body-tertiary">
          <div class="row justify-content-between">
            <div class="col-auto"><strong><%= @post.title %></strong></div>
            <div class="col-auto "><%= render "public/posts/star", post: @post %></div>
          </div>
          <div class="mt-3"><%= simple_format(@post.body) %></div>
          <div class="count mt-3"><%= render 'public/comments/count', post: @post %></div>
          <div class="col-auto">
            ・<%= @post.genre.name %>
            <% @post.tags.each do |tag| %>
              <i class="fa-solid fa-tags" style="color: #505050;"></i>
              <%= link_to tag.name, admin_posts_path(tag_id: tag.id) %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row justify-content-end mt-2">
        <div class="col-auto">
          <%= link_to "削除", admin_post_path(@post), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-outline-danger" %>
        </div>
      </div>
      <div class="index col-md-10 ms-auto">
        <%= render 'public/comments/index', post: @post %>
      </div>
    </div>
  </div>
</div>
