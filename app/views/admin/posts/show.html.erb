<div class="container">
  <div class="row mx-auto mt-3">
    <div class="col-md-3">
      <%= render 'admin/genres/search', genres: @genres %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="row mt-3">
        <div class="col-md-2">
          <%= image_tag @user.get_profile_image, size: "50x50", class: "d-block ms-auto rounded-circle" %>
        </div>
        <div class="col-md-6">
          <div class="mt-2 text-start">
            <%= link_to admin_user_path(@user) do %>
              <%= @user.name %>さん
            <% end %>
          </div>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <%= render 'public/posts/detail', post: @post, user: @user %>
      </div>
      <div class="index col-md-10 ms-auto mt-2">
        <%= render 'public/comments/index', post: @post %>
      </div>
    </div>
  </div>
</div>
