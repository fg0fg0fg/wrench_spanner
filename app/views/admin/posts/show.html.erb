<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-2">
      <%= image_tag @user.get_profile_image, size: "50x50", class: "d-block mx-auto", style: "border-radius: 50%;" %>
    </div>
    <div class="col-md-6">
      <div class="mt-2 text-start">
        <%= link_to admin_user_path(@user), class: "link-secondary link-underline-opacity-0 link-underline-opacity-75-hover" do %>
          <%= @user.name %>さん
        <% end %>
      </div>
    </div>
  </div>
  <div class="row mt-5 justify-content-center">
    <div class="col-md-2">
      <%= image_tag @post.get_post_image, size: "150x150", class: "d-block mx-auto" %>
    </div>
    <div class="col-md-6 border border-black rounded bg-body-tertiary">
      <div class="mt-3"><strong><%= @post.title %></strong>  評価</div>
      <div class="mt-3"></div>
      <div class="mt-3"><%= @post.body %></div>
    </div>
  </div>
  <div class="row justify-content-end">
    <div class="col-md-2 text-right">
      <%= link_to "削除", admin_post_path(@post), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>
