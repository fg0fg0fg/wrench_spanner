<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-5">
      <h4 class="mt-5">ユーザー情報編集</h4>
      <%= render 'layouts/errors', model: @user %>
      <%= form_with model: @user, url: user_path(@user) do |f| %>
        <div class="mb-3">
          <%= f.label :name, "名前", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="input-group mb-3">
          <%= f.label :profile_image, "プロフィール画像", class: "input-group-text" %>
          <%= f.file_field :profile_image, class: "form-control", id: "inputGroupFile01", accept: 'image/*' %>
        </div>
        <div class="mb-3">
          <%= f.label :introduction, "自己紹介", class: "form-label" %>
          <%= f.text_area :introduction, rows: 3, class: "form-control" %>
        </div>
        <div class="d-flex justify-content-end mb-3">
          <%= f.submit "保存", class: "btn btn-block btn-success" %>
        </div>
        <div class="d-flex justify-content-end mb-3">
          <%= link_to "退会", new_user_registration_path, method: :delete, data: {confirm: "本当に退会しますか？"}, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>