<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-2">
      <%= image_tag @user.get_profile_image, size: "100x100", class: "d-block mx-auto", style: "border-radius: 50%;" %>
      <div class="mt-2">
        <% if @user == current_user && !@user.guest_user? %>
          <%= link_to "編集する", edit_user_path(@user), class: "btn btn-outline-success btn-block" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mt-3"><%= @user.name %></div>
      <div class="mt-3">プロフィール</div>
      <div class=""><%= @user.introduction %></div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-2 mx-auto">
      <%= link_to "レビューを書く", new_post_path, class: "btn btn-primary btn-block" %>
    </div>
  </div>
  <div class="col-md-8 mx-auto">
    <div class="row mt-3">
      <% @posts.each do |post| %>
        <div class="col-md-4 mb-2">
          <div class="card">
            <%= image_tag post.get_post_image, size: "100x100", class: "d-block mx-auto" %>
            <div class="card-header text-center"><%= post.title %></div>
            <div class="card-body d-flex justify-content-between">
              <div class="">評価</div>
              <div class="">
                <%= link_to "show", post_path(post), class: "btn btn-outline-info btn-block" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>