<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-2 d-flex align-items-center">
      <%= image_tag @user.get_profile_image, size: "150x150", class: "d-block mx-auto ", style: "border-radius: 50%;" %>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header"><%= @user.name %>さん</div>
        <div class="card-body bg-success-subtle">
          <div class="card-text"><%= @user.introduction %></div>
          <div class="card-text"><small class="text-body-secondary">レビュー数:</small></div>
          <div class="text-end">
            <% if @user == current_user && !@user.guest_user? %>
              <%= link_to "編集", edit_user_path(@user), class: "btn btn-outline-success btn-block" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-2 mx-auto">
      <%= link_to "レビューを書く", new_post_path, class: "btn btn-primary btn-block" %>
    </div>
  </div>
  <div class="col-md-8 mx-auto">
    <div class="row mt-3">
      <% @posts.each do |post| %>
        <div class="col-md-4 mb-2">
          <div class="card">
            <div class="card-img-top">
              <%= image_tag post.get_post_image, size: "100x100", class: "card-img-top", style: "object-fit: cover;"%>
            </div>
            <div class="card-header text-center"><%= post.title %></div>
            <div class="card-body d-flex justify-content-between">
              <div class="">評価</div>
              <div class="">
                <%= link_to "show", post_path(post), class: "btn btn-outline-info btn-block" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>