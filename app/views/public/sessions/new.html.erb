<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto bg-body">
      <h4 class="mt-3">ログイン</h4>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "パスワード", class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="d-flex justify-content-end mb-3">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="mt-3">
        新規登録は<%= link_to "こちら", new_user_registration_path %>
      </div>
      <div class="my-3">
        管理者は<%= link_to "こちら", new_admin_session_path %>
      </div>
    </div>
  </div>
</div>