<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-5">
      <h4 class="mt-5">ユーザー情報編集</h4>
      <%= render 'layouts/errors', obj: @post %>
      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image, "プロフィール画像" %>
          <%= f.file_field :post_image, class: "form-control-file", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :body, "本文" %>
          <%= f.text_area :body, rows: 3, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "保存", class: "btn btn-block btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>