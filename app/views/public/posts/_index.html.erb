<div class="row mt-3">
  <% posts.each do |post| %>
    <div class="col-md-4 mb-2">
      <div class="card">
        <div class="card-img-top">
          <%= image_tag post.get_post_image, size: "150x150", class: "card-img-top", style: "object-fit: cover;"%>
        </div>
        <div class="card-header text-center"><%= post.title %></div>
        <div class="card-body d-flex justify-content-center p-1">
          <div class="col-auto">
            <%= render 'public/posts/star', post: post %>
            <%= render 'public/comments/count', post: post %>
            <p>ãƒ»<%= post.genre.name %></p>
            <div class="d-flex justify-content-between">
              <div>
                <i class="fa-solid fa-heart" style="color: #f00;"></i>
                <%= post.favorites.count %>
              </div>
              <%= link_to "show", post_path(post), class: "btn btn-sm btn-outline-info" %>
            </div>
            <div class="mt-3"><%= l post.created_at %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>