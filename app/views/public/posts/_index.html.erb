<div class="row mt-3">
  <% posts.each do |post| %>
    <div class="col-md-4 mb-2">
      <div class="card">
        <div class="card-img-top">
          <%= image_tag post.get_post_image, size: "150x150", class: "card-img-top", style: "object-fit: cover;"%>
        </div>
        <div class="card-header text-center"><%= post.title %></div>
        <div class="card-body d-flex justify-content-between">
          <div class="">
            <%= render 'public/posts/star', post: post %>
            <%= render 'public/comments/count', post: post %>
          </div>
          <div class=""><small> : <%= post.genre.name %></small></div>
          <div class="">
            <%= link_to "show", post_path(post), class: "btn btn-outline-info btn-block" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>