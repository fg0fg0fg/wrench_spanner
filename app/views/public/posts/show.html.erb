<div class="container">
  <div class="row mx-auto mt-3">
    <div class="col-md-3">
      <%= render 'admin/genres/search', genres: @genres %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="row mt-3">
        <div class="col-md-2">
          <%= image_tag @user.get_profile_image, size: "50x50", class: "d-block ms-auto rounded-circle" %>
        </div>
        <div class="col-md-6">
          <div class="mt-2 text-start">
            <%= link_to user_path(@user) do %>
              <%= @user.name %>さん
            <% end %>
          </div>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <%= render 'public/posts/detail', post: @post, user: @user %>
      </div>
      <div class="col-md-10 mt-2 ms-auto" id="index">
        <%= render 'public/comments/index', post: @post %>
      </div>
      <div class="col-md-10 ms-auto">
        <% unless current_user.email == ENV['GUEST_USER_EMAIL'] %>
          <%= render 'public/comments/form', post: @post, comment: @comment %>
        <% end %>
      </div>
    </div>
  </div>
</div>