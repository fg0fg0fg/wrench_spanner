<div class="container">
  <div class="row mx-auto mt-3">
    <div class="col-md-3">
      <div class="border rounded text-center">
        <h4>ジャンル一覧</h4>
        <% @genres.each do |genre| %>
          <div>
            <%= link_to genre.name %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h4 class="mt-2">レビュー一覧</h4>
      <%= render 'index', posts: @posts %>
    </div>
  </div>
</div>